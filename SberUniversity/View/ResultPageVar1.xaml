                <RowDefinition Height="169"/>
                <RowDefinition Height="1293"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <svgc:SvgViewbox Source="assets/vector.svg" Style="{StaticResource svg2}"/>
            

            <Canvas Grid.Row="1">
