                    <TextBlock x:Name="Program2" Style="{StaticResource Program2}" Text="{Binding Program2Text}"/>
                    <TextBlock x:Name="Desription2" Style="{StaticResource Description1}" Text="{Binding Description2Text}"/>
                    <TextBlock x:Name="Program3" Style="{StaticResource Program2}" Text="{Binding Program3Text}"/>
                    <TextBlock x:Name="Desription3" Style="{StaticResource Description1}" Text="{Binding Description3Text}"/>
